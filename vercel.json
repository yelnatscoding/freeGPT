{
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "outputDirectory": "dist"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend"
      },
      {
        "source": "/(.*)",
        "destination": "/client/index.html"
      }
    ],
  
    "env": {
      "NODE_ENV": "production",
      "REACT_APP_API_URL": "/api"
    }
  }