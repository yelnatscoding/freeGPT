{
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "outputDirectory": "dist"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
  
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ],
  
    "env": {
      "NODE_ENV": "production",
      "REACT_APP_API_URL": "/api"
    }
  }